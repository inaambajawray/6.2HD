{
  "name": "Quiz-Web-Application",
  "version": "1.0.0",
  "scripts": {
    "build": "echo 'Building the application...' && mkdir -p dist && cp index.html script.js style.css dist/",
    "test": "echo 'Testing the application...' && jest"
  },
  "devDependencies": {
    "jest": "29.7.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "vue"],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": ["**/__tests__/**/*.spec.js", "**/?(*.)+(spec|test).[jt]s?(x)"]
  }
}
